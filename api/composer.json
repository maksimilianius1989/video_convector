{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1.0",
        "ext-json": "^1.5",
        "ext-mbstring": "^7.1",
        "doctrine/orm": "^2.6",
        "ramsey/uuid": "^3.8",
        "slim/slim": "^3.11",
        "symfony/console": "^4.1",
        "psr/http-server-middleware": "^1.0",
        "zendframework/zend-config-aggregator": "^1.1",
        "zendframework/zend-diactoros": "^1.7.1",

        "symfony/dotenv": "^4.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Api\\Test\\": "tests/"
        }
    },
    "scripts": {
        "app": "php bin/app.php --ansi",
        "test": "phpunit --colors=always"
    }
}