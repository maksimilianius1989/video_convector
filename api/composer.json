{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1.0",
        "ext-json": "^1.5",
        "ext-mbstring": "^7.1",
        "ramsey/uuid": "^3.8",
        "slim/slim": "^3.11",
        "symfony/dotenv": "^4.1",
        "zendframework/zend-diactoros": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.4",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Api\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Api\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
